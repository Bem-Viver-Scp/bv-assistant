{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",        // ok para Vite
    "jsx": "react-jsx",
    "esModuleInterop": true,              // corrige TS1259
    "allowSyntheticDefaultImports": true, // idem
    "skipLibCheck": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "types": ["vite/client"]              // corrige import.meta.env
  },
  "include": ["src", "env.d.ts"]
}
